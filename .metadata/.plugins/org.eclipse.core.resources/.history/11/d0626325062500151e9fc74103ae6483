	{breed: "Labrador Retriever", dtitle: "Description", dInfo:"", tTitle: "Temperament", tInfo: "", hwTitle: "Height & Weight", hwInfo: "", hTitle: "Health Problems", hInfo: "", eTitle: "Exercise", eInfo: "", oTitle: "Origin", oInfo: ""},
